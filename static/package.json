{
  "private": true,
  "name": "static",
  "version": "0.2.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --no-prerender",
    "serve": "sirv build --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "browserslist": [
    "> 1%",
    "IE >= 11",
    "last 2 versions"
  ],
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "eslint": "^7.1.0",
    "eslint-config-preact": "^1.1.1",
    "flow-bin": "^0.125.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "jest-preset-preact": "^1.0.0",
    "preact-cli": "^3.0.0-rc.6",
    "preact-render-spy": "^1.3.0",
    "sirv-cli": "^0.4.6"
  },
  "dependencies": {
    "@storeon/localstorage": "^0.17.0",
    "preact": "^10.4.4",
    "preact-async-route": "^2.2.1",
    "preact-render-to-string": "^5.1.8",
    "preact-router": "^3.2.1",
    "storeon": "^2.0.2",
    "superagent": "^5.2.2"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
